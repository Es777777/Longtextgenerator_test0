LLM_API_KEY=your_api_key_here
LLM_ENABLE=true
LLM_BASE_URL=https://your-llm-provider/v1/generate
LLM_API_KEY_ENV=LLM_API_KEY
LLM_MODEL=your-model-name
LLM_TIMEOUT_SECONDS=60
LLM_MAX_RETRIES=2

PERPLEXITY_ENABLE=false
PERPLEXITY_ENDPOINT=https://your-llm-provider/v1/logprobs
PERPLEXITY_TEXT_FIELD=prompt
PERPLEXITY_LOGPROBS_FIELD=logprobs

MAX_CHUNK_CHARS=800
OVERLAP_CHARS=80
ENABLE_OVERLAP=true
SUMMARY_CHARS=120
ENABLE_SELF_CHECK=true

AST_GREP_ENABLE=true
AST_GREP_COMMAND=sg
AST_GREP_LANGUAGE=python
AST_GREP_PATTERNS=(function_definition),(class_definition)

TEXT_TYPE_MIN_SCORE=3
TEXT_TYPE_LINE_RATIO_DIVISOR=3
TEXT_TYPE_KEYWORD_WEIGHT=2
TEXT_TYPE_SYMBOL_WEIGHT=1
TEXT_TYPE_LINE_WEIGHT=2
TEXT_TYPE_KEYWORD_PATTERN=\b(def|class|import|from|return|if|else|for|while|try|except|function|const|let|var|public|private|#include)\b
TEXT_TYPE_SYMBOL_PATTERN=[{}();=<>\[\]]
TEXT_TYPE_LINE_START_PATTERN=^\s*(def|class|import|from|#include)\b
TEXT_TYPE_CALL_LIKE_PATTERN=^\s*[^\s]+\s*\([^)]*\)\s*\{?\s*$
TEXT_TYPE_COMMENT_PATTERN=^\s*//|^\s*#
